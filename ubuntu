FROM ubuntu:latest

RUN apt-get -q update -y
RUN apt-get install -y software-properties-common
RUN add-apt-repository -y ppa:ubuntu-toolchain-r/test
RUN apt-get -q update -y
RUN apt-get -qq install -y make cmake cmake-data git g++ gfortran flex doxygen pandoc python2.7 libopenmpi-dev libcereal-dev liblapacke-dev libexodusii-dev libscotch-dev g++-6 gfortran-6 python-pip doxygen texlive-font-utils clang ccache

RUN groupadd -r flecsi && useradd -r -m -g flecsi flecsi
USER flecsi
WORKDIR /home/flecsi
RUN pip install --user codecov
