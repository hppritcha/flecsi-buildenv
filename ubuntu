FROM ubuntu:latest
RUN apt-get -q update -y
RUN apt-get -qq install -y make cmake cmake-data git g++ gfortran flex doxygen pandoc python2.7 libopenmpi-dev libcereal-dev liblapacke-dev libexodusii-dev libscotch-dev libmetis-dev g++-6 gfortran-6 python-pip doxygen texlive-font-utils clang ccache texlive-latex-base texlive-fonts-recommended

RUN groupadd -r flecsi
RUN useradd -r -m -g flecsi flecsi
USER flecsi
ENV PATH=/usr/lib/ccache:${PATH}${PATH:+:}
WORKDIR /home/flecsi
RUN pip install --user codecov
